<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="/assets/js/config.navbar-vertical.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.6.3.min.js"
      integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
      crossorigin="anonymous"
    ></script>
    <script src="https://kenwheeler.github.io/slick/slick/slick.js"></script>
    <link
      href="/assets/lib/perfect-scrollbar/perfect-scrollbar.css"
      rel="stylesheet"
    />

    <link href="/assets/css/theme.css" rel="stylesheet" />
    <link rel="stylesheet" href="./scss/css/style.css" />
    <title>Document</title>
  </head>
  <body>
    <%- include('partials/navbar.ejs') %>
    <!-- comment -->
    <div
      class="container"
      data-layout="container"
      style="max-width: 100% !important"
    >
      <div class="content" style="margin: 0">
        <div class="card shadow-none">
          <div class="card-body p-3">
            <div class="d-flex align-items-center justify-content-end my-3">
              <div id="bulk-select-replace-element">
                <button class="btn btn-falcon-success btn-sm" type="button">
                  <span
                    class="fas fa-plus"
                    data-fa-transform="shrink-3 down-2"
                  ></span
                  ><span class="ms-1">Balance: $<%= balance %></span>
                </button>
              </div>
              <div class="d-none ms-3" id="bulk-select-actions">
                <div class="d-flex">
                  <select
                    class="form-select form-select-sm"
                    aria-label="Bulk actions"
                  >
                    <option selected="selected">Bulk actions</option>
                    <option value="Delete">Delete</option>
                    <option value="Archive">Archive</option></select
                  ><button
                    class="btn btn-falcon-danger btn-sm ms-2"
                    type="button"
                  >
                    Apply
                  </button>
                </div>
              </div>
            </div>
            <div class="table-responsive scrollbar">
              <table class="table mb-0">
                <thead class="text-black bg-200">
                  <tr>
                    <!-- <th class="align-middle white-space-nowrap">
                      <div class="form-check mb-0">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          data-bulk-select='{"body":"bulk-select-body","actions":"bulk-select-actions","replacedElement":"bulk-select-replace-element"}'
                        />
                      </div>
                    </th> -->
                    <th class="align-middle">S No.</th>
                    <th class="align-middle">Name</th>
                    <th class="align-middle">Invite Method</th>
                    <th class="align-middle">Joining Date</th>
                    <th class="align-middle">Plan Type</th>
                  </tr>
                </thead>
                <tbody id="bulk-select-body">
                  <% var i = 0; %> <% for (var u of users) { i++; %>
                  <tr>
                    <!-- <td class="align-middle white-space-nowrap">
                      <div class="form-check mb-0">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          id="checkbox-2"
                          data-bulk-select-row="data-bulk-select-row"
                        />
                      </div>
                    </td> -->
                    <th class="align-middle"><%= i %></th>
                    <td class="align-middle">
                      <a href="http://localhost:4000/<%= u.profilelink %>"
                        ><%= u.name %></a
                      >
                    </td>
                    <td class="align-middle">Direct Link</td>
                    <td class="align-middle"><%= u.createdAt %></td>
                    <td class="align-middle"><%= u.plan %></td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      function myFunctionReferral() {
        // Get the text field
        var copyText = document.getElementById("myInput-2");
        console.log("copy");
        // Select the text field
        copyText.select();
        copyText.setSelectionRange(0, 99999); // For mobile devices

        navigator.clipboard.writeText(copyText.value);
      }
    </script>
  </body>
</html>
